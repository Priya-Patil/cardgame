<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/img_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coming Soon"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:layout_marginLeft="60dp"
            android:textAllCaps="true"
            android:visibility="gone"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cardviewRecharge"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            >

            <TextView
                android:id="@+id/tvRecharge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/buttongradient"
                android:padding="10dp"
                android:shadowColor="#A8A8A8"
                android:shadowDx="3"
                android:shadowDy="2"
                android:shadowRadius="8"
                android:text="Recharge"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/card_view14"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            android:layout_below="@+id/cardviewRecharge"
            app:cardUseCompatPadding="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wallet History"
                android:id="@+id/tvWalletHistory"
                android:layout_centerHorizontal="true"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:padding="10dp"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:background="@drawable/buttongradient"
                android:shadowColor="#A8A8A8"
                android:shadowDx="3"
                android:shadowDy="2"
                android:shadowRadius="8"
                />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cardview_Recharge"
            app:cardCornerRadius="10dp"
            app:cardElevation="20dp"

            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/color_blue1"
            android:background="@drawable/circular_tvborder"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/img_logo"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:src="@color/color_golden"
                    android:layout_alignParentTop="true"
                    app:cardBackgroundColor="@color/color_golden"
                    android:layout_below="@+id/child2_rel"
                    app:civ_border_width="5dp"
                    app:civ_border_color="#cfaa01"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_total"
                    android:text="Total Amount"
                    android:layout_alignParentEnd="true"
                    android:textSize="14sp"
                    android:layout_marginEnd="10dp"
                    android:layout_margin="10dp"
                    android:textColor="@color/white"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_TotalAmt"
                    android:text="200 Rs"
                    android:layout_below="@+id/tv_total"
                    android:layout_alignParentEnd="true"
                    android:textSize="14sp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:id="@+id/tv_RechargeNow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/buttongradient"
                    android:padding="10dp"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/tv_TotalAmt"
                    android:shadowColor="#A8A8A8"
                    android:layout_marginBottom="10dp"
                    android:layout_margin="10dp"
                    android:shadowDx="3"
                    android:shadowDy="2"
                    android:shadowRadius="8"
                    android:text="Recharge Now"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/hidden_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="100dp"
                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="50dp"
                    android:id="@+id/view"
                    android:background="@color/color_golden"/>
                <!--Child LinearLayout 1-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amount"
                    android:id="@+id/tv_amt"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:layout_below="@+id/view"
                    />
                <Spinner
                    android:id="@+id/sp_Amt"
                    android:layout_toRightOf="@id/tv_amt"
                    android:layout_below="@+id/view"
                    android:padding="10dp"
                    android:spinnerMode="dialog"
                    android:background="@color/color_blue1"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_margin="10dp"
                    />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</RelativeLayout>