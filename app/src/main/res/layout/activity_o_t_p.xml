<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card3"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

        <!--1st Layout-->
        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
             android:visibility="visible"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true">



            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/logo"
                android:layout_centerHorizontal="true"
                android:id="@+id/img"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:visibility="gone"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="M90 Technologies"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Welcome to app"
                android:textAlignment="center"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tips are important"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:gravity="center"
                android:visibility="gone"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

               <!-- <EditText
                    android:id="@+id/et_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:hint="Contact Number"
                    android:background="@drawable/simpleshape"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:paddingLeft="20dp"
                    android:inputType="number"
                    android:elevation="5dp"
                    android:layout_marginBottom="10dp"
                    android:maxLength="10"
                    />
-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:layout_marginTop="@dimen/padding_10"
                    android:gravity="center"
                    android:layout_height="50dp"
                    >
                    <TextView
                        android:id="@+id/usernameicon"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:textColor="#ffffff"
                        android:layout_marginLeft="15dp"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/ic_baseline_add_ic_call_24"
                        android:drawableTint="@color/white"/>

                    <EditText
                        android:id="@+id/et_mobile"
                        android:layout_width="0dp"
                        android:layout_weight="8"
                        android:textColor="#ffffff"
                        android:hint="Enter mobile"
                        android:background="@null"
                        android:textColorHint="#ffffff"
                        android:gravity="center|left"
                        android:inputType="number"
                        android:layout_height="match_parent"
                        android:maxLength="10"/>


                </LinearLayout>

            </LinearLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Continue"
                android:id="@+id/submit1"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:background="@drawable/buttongradient"
                android:shadowColor="#E91E63"
                android:shadowDx="3"
                android:shadowDy="2"
                android:layout_marginTop="@dimen/padding_20"
                android:gravity="center"
                android:layout_weight="2"
                android:shadowRadius="8"
                android:padding="10dp"/>
        </LinearLayout>

        <!--2nd Layout-->
        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_margin="30dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter OTP"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/padding_10"
                android:textColor="@color/white"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="10"
                android:layout_marginTop="@dimen/padding_20"
                android:gravity="center"
                android:layout_height="50dp"
                >
                <TextView
                    android:id="@+id/icon"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/ic_baseline_edit_24"/>

                <EditText
                    android:id="@+id/et_otp"
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:textColor="#ffffff"
                    android:hint="Enter OTP"
                    android:background="@null"
                    android:textColorHint="#ffffff"
                    android:gravity="center|left"
                    android:inputType="number"
                    android:maxLength="6"
                    android:textSize="18dp"
                    android:layout_height="match_parent" />


            </LinearLayout>

          <!--  <EditText
                android:id="@+id/et_otp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:hint="One Time Password"
                android:background="@drawable/simpleshape"
                android:textColorHint="@color/black"
                android:textSize="14sp"
                android:paddingLeft="20dp"
                android:inputType="number"
                android:elevation="5dp"
                android:layout_marginBottom="10dp" />-->
            <TextView
                android:id="@+id/text_otp_expire"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="OTP expire after 00:00"
                android:textAlignment="center"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/padding_10"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Verify"
                android:id="@+id/submit2"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:background="@drawable/buttongradient"
                android:shadowColor="#E91E63"
                android:shadowDx="3"
                android:shadowDy="2"
                android:gravity="center"
                android:layout_marginTop="@dimen/padding_20"
                android:layout_weight="2"
                android:shadowRadius="8"
                android:textSize="@dimen/margin_16"
                android:padding="10dp"/>



            <TextView
                android:id="@+id/tv_sms_recv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Didn't receive SMS ? Resend "
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/padding_20"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="10dp"
                android:text="Tap Continue to accept our Terms,Data Policy, cookie use and the Privacy Policy and Terms of Service..."
                android:textAlignment="center"
                android:visibility="gone"/>
        </LinearLayout>


</LinearLayout>
        </ScrollView>


    </RelativeLayout>


</layout>